{
  "name": "shayak-backend",
  "version": "1.0.0",
  "description": "Backend for Shayak - Google Classroom Killer",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "test:manual": "node scripts/test-assignment-features.js",
    "test:assignments": "cross-env NODE_ENV=test jest tests/assignment-features.test.js",
    "test:health": "node scripts/health-check.js",
    "lint": "eslint . --ext .js"
  },
  "dependencies": {
    "aws-sdk": "^2.1473.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^1.1.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "setupFilesAfterEnv": [],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ]
  },
  "keywords": [
    "education",
    "classroom",
    "express",
    "mongodb"
  ],
  "author": "Shayak Team",
  "license": "MIT"
}
